<h4>come on, just make an account for the secret clubhouse</h4>
<form action="/user/sign-up" method="POST"> 
    <section>
        <label for="firstName">first name</label>
        <input name="firstName" placeholder="...">
    </section>
    <section>
        <label for="lastName">last name</label>
        <input name="lastName" placeholder="...">
    </section>
    <section>
        <label for="username">what username would you like?</label>
        <input name="username" placeholder="HIM or HER or THEM">
    </section>
    <% if (passwordsFailMatch) { %>
    <p>dem password dont match</p>
    <% } %>
    <section>
        <label for="password">password</label>
        <input name="password" type="password">
    </section>
    <section>
        <label for="passwordConf">password</label>
        <input name="passwordConf" type="password">
    </section>
    <button>join the clubhouse</button>
</form>